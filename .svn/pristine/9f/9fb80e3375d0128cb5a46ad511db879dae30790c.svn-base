/* CSS Setting */
html, body{
	min-height: 100%
	min-width: 1024px;
}
body{
	margin: 0;
	padding: 0;
	width: 100%;
	margin: auto;/*color: #6b7485;*/
	font-family: '文泉驛微米黑 Regular', '文泉驛微米黑','Arial Negreta cursiva', 'Arial','微軟正黑體';
	background-color:#eeeeee;
	-webkit-font-smoothing:antialiased;
	font-size: 17px;
}

a, abbr, acronym, address, applet, article, aside, audio, b, big, blockquote, body, canvas, caption, center, cite, code, dd, del, details, dfn, div, dl, dt, em, embed, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, html, i, iframe, img, ins, input, kbd, label, legend, li, mark, menu, nav, object, ol, output, p, pre, q, ruby, s, samp, section, small, span, strike, strong, sub, summary, sup, table, tbody, td, tfoot, th, thead, time, tr, tt, u, ul, var, video{
	margin: 0;padding: 0;border: 0;transition:opacity .2s ease,color .2s ease,background .2s ease,box-shadow .2s ease,border .2s ease,width .2s ease, left .2s ease, top.2s ease, right.2s ease;font-family: '微軟正黑體';font-weight: 400;
}

 *:focus { outline: none; }
a{text-decoration: none;}


/*For all Page*/
.limitWebView{
	width: 1024px;
	margin: auto;
	position: relative;
}

/*Login Page*/
/* only for login page */
.LogInPage{padding:70px 0px;width: 100%;text-align: center;margin: auto;}
	.mainLogo{width: 100%;margin-bottom: 100px;}
	.inputDiv{padding: 7px 5px;background-color: #ffffff;width:85%;border-radius: 3px;margin: auto;margin-top: 30px;}
	.inputType{width:95%;height: 30px;border: none;font-size: 18px;}
	.SubmitDiv{margin-top: 100px;position: relative;}
	.szError{position: absolute;top: -65px;color: red;}
	.buttonType{background-color: #111d6d;padding: 15px 25px;color: #ffffff;border-radius: 3px;}

/*For top html*/
.headerMenuBar{
	width: 100%;
	height: 70px;
	position: fixed;
	top: 0;
	z-index: 10;
	background-color: rgba(0,0,0,0.8);
}
.headerMenuBar .logo{
	width: 150px;
	height: 45px;
	background-image: url(../../images/syntec_white.png);
	background-size: 150px auto;
	background-repeat: no-repeat;
	float: left;
	margin: 17px 0px 0px 20px;
}
.headerMenuBar .searchBar{
	width: 650px;
	height: 50px;
	float: left;
	margin-top: 10px;
	margin-left: 20px;
	border-radius: 3px;
	position: relative;
}
@media screen and (max-width: 1230px) {
	.headerMenuBar{min-width: 1024px;}
	.headerMenuBar .searchBar{display: none;}
}
.headerMenuBar .searchBarColor{background-color: rgba(84,84,84,1);}
.headerMenuBar .searchBar #searchIcon{
	width: 25px;
	height: 25px;
	background-image: url(../../images/searchIcon.png);
	background-size: 25px auto;
	background-repeat: no-repeat;
	margin: 12px 0px 0px 12px;
	position: absolute;
}
.headerMenuBar .searchBar input{
	width: 570px;
	height: 30px;
	position: absolute;
	left: 60px;
	top: 10px;
	font-size: 17px;
	color: #ffffff;
}
.headerMenuBar .searchBar a{
	position: absolute;
	padding: 12px 18px;
	background: #ffffff;
	right: 7px;
	top: 2px;
	color: #888888;
}
.headerMenuBar .iconFunction{
	display: inline-block;
	width: 25px;
	height: 25px;
	background-size: 25px auto;
}
.headerMenuBar .link span{
	margin-top: 10px;
	margin-right: 10px;
	display: inline-block;
}
.headerMenuBar #notification{background-image: url(../../images/notification.png);}
.headerMenuBar #setting{background-image: url(../../images/setting.png);}
.headerMenuBar #close{background-image: url(../../images/close.png);}
.headerMenuBar #logout{background-image: url(../../images/logout.png);}
.headerMenuBar .topList{
	color: #ffffff;
	float: right;
	margin: 15px 30px 0px 0px;
	position: relative;
	text-align: center;
}
.headerMenuBar .topList p{
	font-size: 10px;
}

.Page{
	position: fixed;
	z-index: 20;
	width: 100%;
	height: 100%;
	left: 0;
	top: 70px;
	background: #eeeeee;
}
